---
interface Props {
    nonMargin?: boolean;
    lang: "en" | "es";
}

const links = {
    en: {
        History: "/en/history",
        Team: "/en/team",
        Services: "/en/services",
        Contact: "/en/contact",
    },
    es: {
        Historia: "/es/history",
        Equipo: "/es/team",
        Servicios: "/es/services",
        Contacto: "/es/contact",
    }
}

const {lang, nonMargin} = Astro.props;

const extraClass = nonMargin ? "non-margin" : "";


const SelectedLinks = links[lang];
---

<footer class=`${extraClass}`>
    <div class="logo">
        <a href=`/${lang}`>
            <img src="../../images/logo-white.svg" alt="VIPCapital's logo">
        </a>

    </div>
    <div class="nav-links">
        {
            Object.entries(SelectedLinks).map(([name, link]) => (
                <a href={link} class="main-text link-text">{name}</a>
            ))
        }
    </div>
    <br>
    <p class="main-text">Copyright VIPCapital 2023</p>
</footer>

<style>
    footer {
        background-color: var(--primary);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-top: 1px solid white;
        margin-top: 60px;
        padding-bottom: 60px;
    }
    footer.non-margin {
        margin-top: 0;
    }
    .nav-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        width: 100%;
    }
    .logo {
        height: 100px;
        display: grid;
        place-items: center;
    }
    .logo img {
        height: 50px;
    }
</style>