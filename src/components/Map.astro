---
import FlexColumn from "../layouts/FlexColumn.astro";


interface Props {
    lang: string;
}
const {lang} = Astro.props;


const langData = {
    es: {
        title: "Experiencia Regional",
        text: "Durante más de tres décadas el equipo de VIPCapital ha estado involucrado en docenas de transacciones a lo largo y ancho de América Latina y España.  "
    },
    en : {
        title: "Regional Experience",
        text: "For more than three decades the VIPCapital team has been involved in dozens of transactions throughout Latin America and Spain."
    }
}

const data = langData[lang];
---

<FlexColumn>
    <div class="content">
        <div class="text">
            <h2 class="h2 text-white">
                {data.title}
            </h2>
            <p class="main-text text-white">
                {data.text}
            </p>
        </div>
    </div>
    <div class="map-frame">
        <img src="../../images/map.svg" alt="VIPCapital's experience shown on a map.">
    </div>
</FlexColumn>

<style>


    .map-frame {
        width: 100%;
        overflow: hidden;
    }
    .map-frame img {
        object-fit: cover;
        position: relative;
        left: 50%;
        transform: translate(-50%, 0);
    }
    @media screen and (max-width: 700px) {
        .map-frame img {
            left: 0%;
            transform: translate(0, 0);
        }
    }

    @media screen and (max-width: 450px) {
        .map-frame img {
            left: -35%;
            transform: translate(0, 0);
        }
    }
        
    

    .content {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .text {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 20px;
        width: calc(100% - 40px);
        max-width: 1000px;
    }
</style>