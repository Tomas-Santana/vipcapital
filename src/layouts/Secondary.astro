---
interface Props {
    backgroundImage: string;
    title: string;
    subtitle: string;
    pageTitle: string;
    nonMargin?: boolean;
    lang: string;
}

import Layout from './Layout.astro';
import HeroSecondary from '../components/HeroSecondary.astro';
import Footer from '../components/Footer.astro';

const {backgroundImage, title, subtitle, pageTitle, lang} = Astro.props;

let {nonMargin} = Astro.props;
if (nonMargin === undefined) nonMargin = false;

---

<Layout title={pageTitle} class:list={"layout"}>

    <HeroSecondary 
        backgroundImage={backgroundImage}
        title={title}
        subtitle={subtitle}
        lang={lang}
    />

    <slot />

    <Footer lang='en' nonMargin={nonMargin}/>
    
</Layout>

<style>
    .layout {
        width: 100vw;
    }
</style>
