---
interface Props {
    pointy: |"tl"| "tr" | "bl" | "br" | string;
    color: "white"|"blue";
    classes?: string;
 
}

const { pointy, color, classes="" } = Astro.props;



---

<div class=`card card-layout pointy-${pointy} color-${color} ${classes}`>
    <slot/>
</div>

<style is:global>
    .card {
        box-shadow: 0px 0px 4px 2px rgba(0, 0, 0, 0.25);
    }

    .card-layout {
        width: 525px;
        height: 525px;
        display: grid;
        place-items: center;
    }

    .color-blue {
        background: var(--gradient-dark);
    }
    .color-white {
        background-color: white;
    }

    .pointy-tl {
        border-radius: 0 210px 210px 210px;
    }
    .pointy-tr {
        border-radius: 210px 0 210px 210px;
    }
    .pointy-bl {
        border-radius: 210px 210px 0 210px;
    }
    .pointy-br {
        border-radius: 210px 210px 210px 0;
    }
    :root {
        --width: calc(100% - 40px);
    }
    @media screen and (max-width: 600px) {
        .card-layout {
            min-width: var(--width);
            width: 340px;
        }
        .pointy-tl {
            border-radius: 0 136px 136px 136px;
        }
        .pointy-tr {
            border-radius: 136px 0 136px 136px;
        }
        .pointy-bl {
            border-radius: 136px 136px 0 136px;
        }
        .pointy-br {
            border-radius: 136px 136px 136px 0;
        }
    }


</style>