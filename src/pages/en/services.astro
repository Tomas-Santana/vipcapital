---
import Secondary from "../../layouts/Secondary.astro";
import ServiceCard from "../../components/ServiceCard.astro";
import CardWrapper from "../../layouts/CardWrapper.astro";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout
    title="Services"
>
    <Navbar lang="en"/>
    <Secondary
        backgroundImage="../../images/caracas-2.webp"
        title="Services"
        subtitle="We offer a wide range of services to help you achieve your goals."
        pageTitle="Services"
        lang="en"
    >
    
        <section>
            <CardWrapper>
                <ServiceCard 
                    title="Mergers and acquisitions"
                    description=""
                    icon="domain"
                    pointy="tl"
                    bulletPoints={
                        [
                            "Exploration and selection of target companies for acquisitions",
                            "Development of sales strategies",
                            "Valuation and analysis of mergers",
                            "Mergers and acquisitions support",
                        ]
                    }
                />
                <ServiceCard 
                    title="Fundraising"
                    description=""
                    icon="currency-usd"
                    pointy="tr"
                    bulletPoints={
                        [
                            "Capital markets",
                            "Bank and multilateral debt",
                            "Project finance",
                            "Private equity",
                        ]
                    }
                />
                <ServiceCard 
                    title="Financial advisory"
                    description=""
                    icon="finance"
                    pointy="br"
                    bulletPoints={
                        [
                            "Company valuation",
                            "Optimal capital structure",
                            "Financial strategy",
                            "Treasury instruments"
                        ]
                    }
                />
                <ServiceCard 
                    title="Structured products"
                    description=""
                    icon="briefcase"
                    pointy="bl"
                    bulletPoints={
                        [
                            "Structured products",
                            "Investment management advice",
                            "Sale of complex credits"
                        ]
                    }
                />
            </CardWrapper>
        </section>
    
    
    
    </Secondary>
</Layout>
<Navbar lang="es"/>
